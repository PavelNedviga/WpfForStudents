<Window x:Class="WpfForStudents.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:WpfForStudents"
        mc:Ignorable="d"
        Title="MainWindow" Height="450" Width="800">
    <Window.Resources>
        <Style TargetType="Button" x:Key="Default">
            <Setter Property="Background" Value="CadetBlue"/>
            <Setter Property="Foreground" Value="White"/>
        </Style>
        <Style TargetType="Button" x:Key="Error">
            <Setter Property="Background" Value="IndianRed"/>
            <Setter Property="Foreground" Value="White"/>
            <Setter Property="BorderThickness" Value="1"/>
        </Style>
        <ControlTemplate TargetType="Button" x:Key="BaseBtnTemplate">
            <StackPanel>
                <TextBlock Text="{TemplateBinding Tag}" Foreground="Black" TextAlignment="Center"/>
                <Button Content="{TemplateBinding Content}" Style="{StaticResource Default}"/>
            </StackPanel>
        </ControlTemplate>
    </Window.Resources>
    <UniformGrid Columns="4">
        <Button Content="Text" Margin="3"
                Style="{StaticResource DefaultBtn}"
                Tag="Super Button"
                Template="{StaticResource BaseBtnTemplate}" />
        <Button Content="Button" Margin="5" Grid.Column="2" Style="{StaticResource Default}"/>
        <Button Content="Button" Margin="5" Grid.Column="2" Background="BlanchedAlmond" Foreground="DimGray"/>
        <Button Content="Button" Margin="5" Grid.Column="2" Style="{StaticResource Error}"/>
    </UniformGrid>
</Window>
